<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlanTV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemTextView">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ItemMovieTitleTextView">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">17sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ItemMovieDescriptionTextView">
        <!-- Primary brand color. -->
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ItemCardView">
        <item name="android:background">#000E0E0E</item>
    </style>
</resources>